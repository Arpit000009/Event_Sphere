<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= event.title %> - Details
    </title>
    <%- include('../partials/header') %>
        <style>
            body {
                background-color: #e3f2fd;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            .container {
                background-color: #ffffff;
                padding: 2rem 2.5rem;
                border-radius: 10px;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
            }

            h2 {
                color: #0d47a1;
                font-weight: bold;
            }

            p {
                font-size: 1.05rem;
                color: #333;
                line-height: 1.7;
            }

            strong {
                color: #0d47a1;
            }

            .btn-success {
                background-color: #2e7d32;
                border-color: #2e7d32;
            }

            .btn-success:hover {
                background-color: #1b5e20;
            }

            .btn-secondary {
                background-color: #78909c;
                border-color: #78909c;
            }

            .btn-secondary:hover {
                background-color: #546e7a;
            }

            @media (max-width: 768px) {
                .container {
                    padding: 1.5rem;
                }
            }
        </style>
</head>

<body>
    <%- include('../partials/nav') %>

        <div class="container mt-5 mb-5">
            <h2 class="mb-3">
                <%= event.title %>
            </h2>

            <p><strong>Date:</strong>
                <%= new Date(event.date).toDateString() %>
            </p>

            <% if (event.time) { %>
                <p><strong>Time:</strong>
                    <%= event.time %>
                </p>
                <% } %>

                    <% if (event.location) { %>
                        <p><strong>Location:</strong>
                            <%= event.location %>
                        </p>
                        <% } %>

                            <p><strong>Price:</strong> â‚¹<%= event.price %>
                            </p>

                            <p><strong>Description:</strong></p>
                            <p>
                                <%= event.description %>
                            </p>

                            <% if (user && user.role==='user' ) { %>
                                <form action="/tickets/purchase/<%= event._id %>" method="POST" class="mt-4">
                                    <button type="submit" class="btn btn-success">Buy Ticket</button>
                                </form>
                                <% } %>

                                    <a href="/dashboard" class="btn btn-secondary mt-3">Back</a>
        </div>

        <%- include('../partials/footer') %>
</body>

</html>