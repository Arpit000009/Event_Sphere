<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Ticket - <%= event.title %>
    </title>
    <%- include('../partials/header') %>
        <style>
            body {
                background-color: #e3f2fd;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            .price-card {
                background: #ffffff;
                border-radius: 15px;
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
                padding: 30px;
                margin-top: 50px;
            }

            .event-image {
                width: 100%;
                height: 200px;
                background: linear-gradient(135deg, #2196f3 0%, #1e88e5 100%);
                border-radius: 10px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-size: 2rem;
                margin-bottom: 20px;
            }

            .price-display {
                font-size: 2.2rem;
                font-weight: bold;
                color: #2e7d32;
                text-align: center;
                margin: 20px 0;
            }

            .event-details {
                background: #f0f7ff;
                padding: 20px;
                border-radius: 10px;
                margin: 20px 0;
                color: #333;
            }

            .event-details p {
                margin-bottom: 10px;
            }

            .confirm-btn {
                width: 100%;
                padding: 15px;
                font-size: 18px;
                font-weight: bold;
                border-radius: 10px;
                transition: all 0.3s ease;
            }

            .confirm-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            }

            .btn-confirmed {
                background-color: #1565c0 !important;
                border-color: #1565c0 !important;
                cursor: not-allowed;
            }

            .btn-confirmed:hover {
                background-color: #0d47a1 !important;
                border-color: #0d47a1 !important;
                transform: none;
            }

            .btn-outline-secondary {
                border-color: #78909c;
                color: #455a64;
            }

            .btn-outline-secondary:hover {
                background-color: #78909c;
                color: white;
            }
        </style>
</head>

<body>
    <%- include('../partials/nav') %>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="price-card">
                        <div class="text-center">
                            <h2 class="mb-4 text-primary">Confirm Your Ticket</h2>
                        </div>

                        <div class="event-image">
                            <i class="fas fa-calendar-alt"></i>
                        </div>

                        <div class="event-details">
                            <h4 class="text-center mb-3 text-dark">
                                <%= event.title %>
                            </h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong><i class="fas fa-calendar me-2"></i>Date:</strong><br>
                                        <%= new Date(event.date).toDateString() %>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong><i class="fas fa-clock me-2"></i>Time:</strong><br>
                                        <%= new Date(event.date).toLocaleTimeString() %>
                                    </p>
                                </div>
                            </div>
                            <% if (event.location) { %>
                                <p><strong><i class="fas fa-map-marker-alt me-2"></i>Location:</strong><br>
                                    <%= event.location %>
                                </p>
                                <% } %>
                                    <p><strong><i class="fas fa-info-circle me-2"></i>Description:</strong><br>
                                        <%= event.description %>
                                    </p>
                        </div>

                        <div class="price-display">
                            â‚¹<%= event.price %>
                        </div>

                        <div class="text-center">
                            <% if (alreadyPurchased) { %>
                                <button class="btn btn-primary btn-confirmed confirm-btn" disabled>
                                    <i class="fas fa-check me-2"></i>Ticket Confirmed
                                </button>
                                <p class="text-muted mt-3">
                                    <i class="fas fa-info-circle me-1"></i>
                                    You have already confirmed your ticket for this event.
                                </p>
                                <% } else { %>
                                    <form method="POST" action="/events/<%= event._id %>/purchase" id="purchaseForm">
                                        <button type="submit" class="btn btn-success confirm-btn" id="confirmBtn">
                                            <i class="fas fa-ticket-alt me-2"></i>Confirm Ticket
                                        </button>
                                    </form>
                                    <p class="text-muted mt-3">
                                        <i class="fas fa-shield-alt me-1"></i>
                                        Click to confirm your registration for this event.
                                    </p>
                                    <% } %>
                        </div>

                        <div class="text-center mt-4">
                            <a href="/dashboard" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.getElementById('purchaseForm')?.addEventListener('submit', function (e) {
                const btn = document.getElementById('confirmBtn');
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                btn.classList.remove('btn-success');
                btn.classList.add('btn-secondary');
            });
        </script>

        <%- include('../partials/footer') %>
</body>

</html>