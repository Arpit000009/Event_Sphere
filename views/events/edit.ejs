<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Event</title>
    <%- include('../partials/header') %>
        <style>
            body {
                background-color: #e3f2fd;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            h2 {
                color: #0d47a1;
                font-weight: bold;
            }

            .form-label {
                font-weight: 500;
                color: #0d47a1;
            }

            .form-control {
                border: 1px solid #90caf9;
                border-radius: 6px;
            }

            .form-control:focus {
                border-color: #1976d2;
                box-shadow: 0 0 0 0.2rem rgba(25, 118, 210, 0.25);
            }

            .btn-primary {
                background-color: #1976d2;
                border-color: #1976d2;
            }

            .btn-primary:hover {
                background-color: #1565c0;
            }

            .btn-secondary {
                background-color: #78909c;
                border-color: #78909c;
            }

            .btn-secondary:hover {
                background-color: #546e7a;
            }

            .btn-danger {
                background-color: #e53935;
                border-color: #e53935;
            }

            .btn-danger:hover {
                background-color: #c62828;
            }

            .container {
                background-color: #ffffff;
                padding: 2rem 2.5rem;
                border-radius: 10px;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
            }

            @media (max-width: 768px) {
                .container {
                    padding: 1.5rem;
                }
            }
        </style>
</head>

<body>
    <%- include('../partials/nav') %>

        <div class="container mt-5 mb-5">
            <h2 class="mb-4">Edit Event</h2>

            <!-- Update Event Form -->
            <form action="/events/<%= event._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" name="title" value="<%= event.title %>" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Date</label>
                    <input type="date" class="form-control" name="date"
                        value="<%= event.date.toISOString().split('T')[0] %>" required />
                </div>
                

                <div class="mb-3">
                    <label class="form-label">Time</label>
                    <input type="time" class="form-control" name="time" value="<%= event.time || '' %>" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Location</label>
                    <input type="text" class="form-control" name="location" value="<%= event.location || '' %>" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Ticket Price (INR)</label>
                    <input type="number" class="form-control" name="price" min="0" value="<%= event.price || 0 %>"
                        required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="description" rows="4"
                        required><%= event.description %></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Update Event</button>
                <a href="/dashboard" class="btn btn-secondary ms-2">Cancel</a>
            </form>

            <!-- Delete Event Button -->
            <form action="/events/<%= event._id %>?_method=DELETE" method="POST" class="mt-3"
                onsubmit="return confirm('Are you sure you want to delete this event?');">
                <button type="submit" class="btn btn-danger">Delete Event</button>
            </form>
        </div>

        <%- include('../partials/footer') %>
</body>

</html>