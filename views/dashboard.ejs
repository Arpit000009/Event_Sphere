<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./partials/header') %>
        <style>
            /* This class truncates text after 2 lines with an ellipsis */
            .text-truncate-2 {
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
            }
        </style>
</head>

<body>
    <%- include('partials/nav') %>

        <div class="container mt-5">
            <h1 class="mb-4">Your Events</h1>

            <% if (events.length===0) { %>
                <div class="alert alert-info">You haven't created any events yet.</div>
                <% } else { %>
                    <ul class="list-group">
                        <% events.forEach(event=> { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>
                                        <%= event.title %>
                                    </strong> â€” <%= new Date(event.date).toDateString() %>
                                        <p class="mb-0 text-truncate-2">
                                            <%= event.description %>
                                        </p>
                                </div>
                                <div>
                                    <a href="/events/<%= event._id %>" class="btn btn-sm btn-info me-2">Details</a>
                                    <a href="/events/<%= event._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                </div>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
        </div>

        <%- include('partials/footer') %>
</body>

</html>