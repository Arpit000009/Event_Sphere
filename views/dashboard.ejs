<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <%- include('./partials/header') %>

        <style>
            .text-truncate-2 {
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .event-card {
                background: #fff;
                border-radius: 10px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
                padding: 20px;
                margin-bottom: 20px;
                transition: box-shadow 0.3s;
            }

            .event-card:hover {
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            }

            .event-title {
                font-size: 18px;
                font-weight: bold;
            }

            .event-date {
                font-size: 14px;
                color: #666;
            }

            .event-actions {
                margin-top: 15px;
            }

            .event-actions a {
                margin-right: 10px;
            }
        </style>
</head>

<body>
    <%- include('partials/nav') %>

        <div class="container mt-5">
            <h1 class="mb-4">Your Events</h1>

            <% if (events.length===0) { %>
                <div class="alert alert-info">You haven't created any events yet.</div>
                <% } else { %>
                    <div class="row">
                        <% events.forEach(event=> { %>
                            <div class="col-md-12">
                                <div class="event-card">
                                    <div class="event-title">
                                        <%= event.title %>
                                    </div>
                                    <div class="event-date">
                                        <%= new Date(event.date).toDateString() %>
                                    </div>
                                    <p class="mt-2 mb-3 text-truncate-2">
                                        <%= event.description %>
                                    </p>

                                    <div class="event-actions">
                                        <a href="/events/<%= event._id %>" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye me-1"></i> Details
                                        </a>
                                        <a href="/events/<%= event._id %>/edit" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>
        </div>

        <%- include('partials/footer') %>
</body>

</html>