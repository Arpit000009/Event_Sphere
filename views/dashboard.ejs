<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <%- include('./partials/header') %>

        <style>
            .text-truncate-2 {
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .event-card {
                background: #fff;
                border-radius: 10px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
                padding: 20px;
                margin-bottom: 20px;
                transition: box-shadow 0.3s;
            }

            .event-card:hover {
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            }

            .event-title {
                font-size: 18px;
                font-weight: bold;
            }

            .event-date {
                font-size: 14px;
                color: #666;
            }

            .event-actions {
                margin-top: 15px;
            }

            .event-actions a,
            .event-actions form {
                display: inline-block;
            }

            .btn[disabled] {
                cursor: not-allowed;
                opacity: 0.7;
            }

            .attendees-list {
                background: #f8f9fa;
                padding: 15px;
                border-radius: 8px;
                margin-top: 15px;
            }

            .attendee-item {
                background: white;
                padding: 10px;
                margin: 5px 0;
                border-radius: 5px;
                border-left: 4px solid #007bff;
            }
        </style>
</head>

<body>
    <%- include('partials/nav') %>

        <div class="container mt-5">
            <!-- Success/Error Messages -->
            <% if (typeof message !=='undefined' && message) { %>
                <% if (message==='ticket_confirmed' ) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Success!</strong> Your ticket has been confirmed successfully!
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } else if (message==='already_purchased' ) { %>
                        <div class="alert alert-warning alert-dismissible fade show">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Notice:</strong> You already have a ticket for this event.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>
                            <% } %>

                                <h1 class="mb-4">
                                    <% if (user.role==='admin' ) { %>
                                        Your Events
                                        <a href="/events/new" class="btn btn-primary btn-sm ms-3">
                                            <i class="fas fa-plus me-1"></i> Create New Event
                                        </a>
                                        <% } else { %>
                                            Available Events
                                            <% } %>
                                </h1>

                                <% if (events.length===0) { %>
                                    <div class="alert alert-info">
                                        <% if (user.role==='admin' ) { %>
                                            You haven't created any events yet.
                                            <% } else { %>
                                                No events available right now.
                                                <% } %>
                                    </div>
                                    <% } else { %>
                                        <div class="row">
                                            <% events.forEach(event=> { %>
                                                <div class="col-md-12">
                                                    <div class="event-card">
                                                        <div class="event-title">
                                                            <%= event.title %>
                                                        </div>
                                                        <div class="event-date">
                                                            <i class="fas fa-calendar me-1"></i>
                                                            <%= new Date(event.date).toDateString() %>
                                                        </div>
                                                        <p class="mt-2 mb-2 text-truncate-2">
                                                            <%= event.description %>
                                                        </p>
                                                        <p><strong>Price:</strong> â‚¹<%= event.price %>
                                                        </p>

                                                        <div class="event-actions">
                                                            <a href="/events/<%= event._id %>"
                                                                class="btn btn-sm btn-info">
                                                                <i class="fas fa-eye me-1"></i> Details
                                                            </a>

                                                            <% if (user.role==='admin' ) { %>
                                                                <a href="/events/<%= event._id %>/edit"
                                                                    class="btn btn-sm btn-warning">
                                                                    <i class="fas fa-edit me-1"></i> Edit
                                                                </a>
                                                                <form method="POST"
                                                                    action="/events/<%= event._id %>?_method=DELETE"
                                                                    style="display: inline;"
                                                                    onsubmit="return confirm('Are you sure you want to delete this event?')">
                                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                                        <i class="fas fa-trash me-1"></i> Delete
                                                                    </button>
                                                                </form>
                                                                <% } else { %>
                                                                    <% if (event.purchased) { %>
                                                                        <button class="btn btn-sm btn-primary" disabled>
                                                                            <i class="fas fa-check me-1"></i> Ticket
                                                                            Confirmed
                                                                        </button>
                                                                        <% } else { %>
                                                                            <a href="/events/<%= event._id %>/price"
                                                                                class="btn btn-sm btn-success">
                                                                                <i class="fas fa-ticket-alt me-1"></i>
                                                                                Buy Ticket
                                                                            </a>
                                                                            <% } %>
                                                                                <% } %>
                                                        </div>

                                                        <!-- Admin-only Attendee List -->
                                                        <% if (user.role==='admin' && event.attendees &&
                                                            event.attendees.length> 0) { %>
                                                            <div class="attendees-list">
                                                                <h6><i class="fas fa-users me-2"></i>Registered
                                                                    Attendees (<%= event.attendees.length %>)</h6>
                                                                <% event.attendees.forEach(attendee=> { %>
                                                                    <div class="attendee-item">
                                                                        <strong>
                                                                            <%= attendee.name %>
                                                                        </strong>
                                                                        <br>
                                                                        <small class="text-muted">
                                                                            <i class="fas fa-envelope me-1"></i>
                                                                            <%= attendee.email %>
                                                                                <span class="ms-3">
                                                                                    <i class="fas fa-clock me-1"></i>
                                                                                    Registered: <%= new
                                                                                        Date(attendee.registeredAt).toLocaleDateString()
                                                                                        %>
                                                                                </span>
                                                                        </small>
                                                                    </div>
                                                                    <% }) %>
                                                            </div>
                                                            <% } else if (user.role==='admin' ) { %>
                                                                <div class="attendees-list">
                                                                    <p class="text-muted mb-0">
                                                                        <i class="fas fa-info-circle me-2"></i>No
                                                                        attendees registered yet.
                                                                    </p>
                                                                </div>
                                                                <% } %>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } %>
        </div>

        <%- include('partials/footer') %>
</body>

</html>