<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <%- include('./partials/header') %>

    <style>
        body {
            background-color: #e3f2fd; /* Soft blue background */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    
        .event-card {
            background: #ffffff;
            border-left: 5px solid #1976d2; /* Blue border indicator */
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(25, 118, 210, 0.1); /* Blue tint shadow */
            padding: 20px;
            margin-bottom: 20px;
            transition: box-shadow 0.3s ease-in-out;
        }
    
        .event-card:hover {
            box-shadow: 0 6px 18px rgba(25, 118, 210, 0.2);
        }
    
        .event-title {
            font-size: 18px;
            font-weight: bold;
            color: #0d47a1; /* Deep blue */
        }
    
        .event-date {
            font-size: 14px;
            color: #1565c0;
        }
    
        .event-actions {
            margin-top: 15px;
        }
    
        .event-actions a,
        .event-actions form {
            display: inline-block;
        }
    
        .btn[disabled] {
            cursor: not-allowed;
            opacity: 0.7;
        }
    
        .attendees-list {
            background: #e3f2fd;
            padding: 15px;
            border-radius: 8px;
            margin-top: 15px;
            border-left: 4px solid #1976d2;
        }
    
        .attendee-item {
            background: #ffffff;
            padding: 10px;
            margin: 5px 0;
            border-radius: 5px;
            border-left: 4px solid #2196f3;
        }
    
        .attendees-list h6 {
            color: #0d47a1;
            font-weight: bold;
        }
    
        .btn-outline-primary {
            border-color: #1976d2;
            color: #1976d2;
        }
    
        .btn-outline-primary:hover {
            background-color: #1976d2;
            color: white;
        }
    
        .alert-success {
            background-color: #d0f0d9;
            border-color: #81c784;
            color: #256029;
        }
    
        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeeba;
            color: #856404;
        }
    
        .alert-info {
            background-color: #dbeafe;
            border-color: #90caf9;
            color: #0d47a1;
        }
    </style>
    
</head>

<body>
    <%- include('partials/nav') %>

        <div class="container mt-5">
            <!-- Success/Error Messages -->
            <% if (typeof message !=='undefined' && message) { %>
                <% if (message==='ticket_confirmed' ) { %>
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Success!</strong> Your ticket has been confirmed successfully!
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } else if (message==='already_purchased' ) { %>
                        <div class="alert alert-warning alert-dismissible fade show">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Notice:</strong> You already have a ticket for this event.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>
                            <% } %>

                                <h1 class="mb-4">
                                    <% if (user.role==='admin' ) { %>
                                        Your Events
                                        <a href="/events/new" class="btn btn-primary btn-sm ms-3">
                                            <i class="fas fa-plus me-1"></i> Create New Event
                                        </a>
                                        <% } else { %>
                                            Available Events
                                            <% } %>
                                </h1>

                                <% if (events.length===0) { %>
                                    <div class="alert alert-info">
                                        <% if (user.role==='admin' ) { %>
                                            You haven't created any events yet.
                                            <% } else { %>
                                                No events available right now.
                                                <% } %>
                                    </div>
                                    <% } else { %>
                                        <div class="row">
                                            <% events.forEach(event=> { %>
                                                <div class="col-md-12">
                                                    <div class="event-card">
                                                        <div class="event-title">
                                                            <%= event.title %>
                                                        </div>
                                                        <div class="event-date">
                                                            <i class="fas fa-calendar me-1"></i>
                                                            <%= new Date(event.date).toDateString() %>
                                                        </div>
                                                        <p class="mt-2 mb-2 text-truncate-2">
                                                            <%= event.description %>
                                                        </p>
                                                        <p><strong>Price:</strong> â‚¹<%= event.price %>
                                                        </p>

                                                        <div class="event-actions">
                                                            <a href="/events/<%= event._id %>"
                                                                class="btn btn-sm btn-info">
                                                                <i class="fas fa-eye me-1"></i> Details
                                                            </a>

                                                            <% if (user.role==='admin' ) { %>
                                                                <a href="/events/<%= event._id %>/edit"
                                                                    class="btn btn-sm btn-warning">
                                                                    <i class="fas fa-edit me-1"></i> Edit
                                                                </a>
                                                                <form method="POST"
                                                                    action="/events/<%= event._id %>?_method=DELETE"
                                                                    style="display: inline;"
                                                                    onsubmit="return confirm('Are you sure you want to delete this event?')">
                                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                                        <i class="fas fa-trash me-1"></i> Delete
                                                                    </button>
                                                                </form>
                                                                <% } else { %>
                                                                    <% if (event.purchased) { %>
                                                                        <button class="btn btn-sm btn-primary" disabled>
                                                                            <i class="fas fa-check me-1"></i> Ticket
                                                                            Confirmed
                                                                        </button>
                                                                        <% } else { %>
                                                                            <a href="/events/<%= event._id %>/price"
                                                                                class="btn btn-sm btn-success">
                                                                                <i class="fas fa-ticket-alt me-1"></i>
                                                                                Buy Ticket
                                                                            </a>
                                                                            <% } %>
                                                                                <% } %>
                                                        

                                                        <!-- Admin-only Attendee List -->
                                                        <% if (user.role==='admin' ) { %>
                                                            <button class="btn btn-sm btn-outline-primary mt-2" type="button" data-bs-toggle="collapse"
                                                                data-bs-target="#attendees-<%= event._id %>">
                                                                <i class="fas fa-users me-1"></i> View Attendees
                                                            </button>
                                                        
                                                            <div class="collapse mt-3" id="attendees-<%= event._id %>">
                                                                <% if (event.attendees && event.attendees.length> 0) { %>
                                                                    <div class="attendees-list">
                                                                        <h6><i class="fas fa-users me-2"></i>Registered Attendees (<%= event.attendees.length %>)</h6>
                                                                        <% event.attendees.forEach(attendee=> { %>
                                                                            <div class="attendee-item">
                                                                                <strong>
                                                                                    <%= attendee.name %>
                                                                                </strong><br>
                                                                                <small class="text-muted">
                                                                                    <i class="fas fa-envelope me-1"></i>
                                                                                    <%= attendee.email %>
                                                                                        <span class="ms-3"><i class="fas fa-clock me-1"></i>Registered: <%= new
                                                                                                Date(attendee.registeredAt).toLocaleDateString() %></span>
                                                                                </small>
                                                                            </div>
                                                                            <% }) %>
                                                                    </div>
                                                                    <% } else { %>
                                                                        <div class="attendees-list">
                                                                            <p class="text-muted mb-0"><i class="fas fa-info-circle me-2"></i>No attendees registered yet.</p>
                                                                        </div>
                                                                        <% } %>
                                                            </div>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } %>
        </div>

        <%- include('partials/footer') %>
</body>

</html>